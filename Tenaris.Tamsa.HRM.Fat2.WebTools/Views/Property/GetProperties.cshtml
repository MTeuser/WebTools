@model IEnumerable<Tenaris.Tamsa.HRM.Fat2.DataAccess.Models.Tool_Property>

@{
    Layout = null;
    var grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}

<style type="text/css">
    /*Here we will add css for style webgrid*/
    .webgrid-table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px #98BF21;
        background-color: white;
    }

        .webgrid-table td, th {
            border: 1px solid #98BF21;
            padding: 3px 7px 2px;
        }

    .webgrid-header {
        background-color: #A7C942;
        color: #FFFFFF;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }

    .webgrid-alternating-row {
        background-color: #EAF2D3;
        padding: 3px 7px 2px;
    }
</style>

<div style="padding:7px 0;">
    <input type="button" value="Nueva" onclick="OpenCreatePopup()" />
</div>

<div id="content">
    @grid.GetHtml(
                tableStyle: "webgrid-table",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                rowStyle: "webgrid-row-style",
                columns: grid.Columns(
            //here i will add column for serial no
                    grid.Column(header: "", format: @<text><div>@(item.WebGrid.Rows.IndexOf(item) + 1)</div></text>),
                                            grid.Column(columnName: "Name", header: "Nombre"),
                                            grid.Column(columnName: "dataType", header: "Tipo de dato")
            //grid.Column(header: "Activo", format: @<text><input type="checkbox" checked="@item." disabled="disabled" /></text>)
                                     ))
</div>

<div id="DivToAppendPartialVoew"></div>

<script type="text/javascript">
    function Edit(pid) {
        var ph = $("#DivToAppendPartialVoew");
        ph.load("/Products/edit?productid=" + pid, function () {
            ph.dialog({
                modal: true,
                width: 500,
                height: 438,
                title: "Edit Product",
                resizable: false
            });
        });
    }

    function Delete(pid) {
        if (confirm("Do you want to delete product: " + pid)) {
            var data = { 'ProductId': pid }
            $.post('/Products/Delete', data,
            function (data) {
                if (data == true)
                    location = location.href;
                else
                    alert("Could not delete");
            });
        }
    }

    function OpenCreatePopup() {
        var div = $("#DivToAppendPartialVoew");
        @*div.load("@Url.Action("Create","Property")", function () {*@
        div.load("@Url.Action("Create","Property")", function () {

            //div.dialog({
            //    modal: true,
            //    width: 500,
            //    height: 438,
            //    title: "Add New Product",
            //    resizable: false
            //});
            //alert("Dialog must be showed");
        });
        setTimeout("$(DivToAppendPartialVoew).dialog();", 1000);
    }

</script>